{
  "compilerOptions": {
    "lib": ["es2017", "dom", "ES2020.String"],
    "removeComments": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "target": "es2017",
    "outDir": "lib",
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "functions/*": ["functions/*"],
      "utils/*": ["utils/*"],
      "gql/*": ["gql/*"],
      "scripts/*": ["scripts/*"],
      "middlewares/*": ["middlewares/*"]
    },
    "allowJs": true,
    "typeRoots": ["node_modules/@types", "imports/@types"]
  },
  "include": ["./**/*.ts", "./**/*.graphql"],
  "files": ["imports/@types/graphql.d.ts"],
  "exclude": ["node_modules"]
}
